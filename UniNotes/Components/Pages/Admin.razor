    private void CancelSubjectEdit()
    {
        editingSubjectId = null;
        editingSubjectValue = null;
    }
    
    private async Task SaveSubjectEdit()
    {
        if (string.IsNullOrWhiteSpace(editingSubjectValue) || subjectsData == null || selectedSemesterId <= 0)
        {
            CancelSubjectEdit();
            return;
        }
        
        var semester = subjectsData.Semesters.FirstOrDefault(s => s.Id == selectedSemesterId);
        if (semester != null)
        {
            int index = semester.Subjects.IndexOf(editingSubjectId);
            if (index >= 0)
            {
                // Update the subject name
                semester.Subjects[index] = editingSubjectValue.Trim();
                
                // Save changes
                await SaveSubjectsChanges();
                
                // Update notes that use this subject (this would require additional implementation)
                // await UpdateNotesWithSubject(editingSubjectId, editingSubjectValue.Trim());
            }
        }
        
        CancelSubjectEdit();
    }
    
    private void ClearSubjectEditState()
    {
        editingSubjectId = null;
        editingSubjectValue = null;
        newSubjectName = null;
    }
    
    private async Task AddNewSubject()
    {
        if (string.IsNullOrWhiteSpace(newSubjectName) || subjectsData == null || selectedSemesterId <= 0)
        {
            return;
        }
        
        var semester = subjectsData.Semesters.FirstOrDefault(s => s.Id == selectedSemesterId);
        if (semester != null)
        {
            // Check if subject already exists
            if (semester.Subjects.Any(s => s.Equals(newSubjectName.Trim(), StringComparison.OrdinalIgnoreCase)))
            {
                errorMessage = $"Subject '{newSubjectName}' already exists in this semester.";
                return;
            }
            
            // Add the new subject
            semester.Subjects.Add(newSubjectName.Trim());
            
            // Save changes
            await SaveSubjectsChanges();
            
            // Clear the input
            newSubjectName = null;
        }
    }
    
    private async Task ConfirmDeleteSubject(string subject)
    {
        if (subjectsData == null || selectedSemesterId <= 0)
        {
            return;
        }
        
        bool confirmed = await JSRuntime.InvokeAsync<bool>(
            "confirm", $"Are you sure you want to delete the subject '{subject}'? This may affect notes that use this subject."
        );
        
        if (confirmed)
        {
            var semester = subjectsData.Semesters.FirstOrDefault(s => s.Id == selectedSemesterId);
            if (semester != null)
            {
                // Remove the subject
                semester.Subjects.Remove(subject);
                
                // Save changes
                await SaveSubjectsChanges();
            }
        }
    }
    
    private async Task ConfirmDeleteSemester(int semesterId)
    {
        if (subjectsData == null || semesterId <= 0 || semesterId == 1) // Don't allow deleting semester 1
        {
            return;
        }
        
        bool confirmed = await JSRuntime.InvokeAsync<bool>(
            "confirm", $"Are you sure you want to delete Semester {semesterId} and all its subjects? This cannot be undone."
        );
        
        if (confirmed)
        {
            // Remove the semester
            subjectsData.Semesters.RemoveAll(s => s.Id == semesterId);
            
            // Save changes
            await SaveSubjectsChanges();
            
            // Select the first available semester
            if (subjectsData.Semesters.Any())
            {
                selectedSemesterId = subjectsData.Semesters.Min(s => s.Id);
            }
            else
            {
                selectedSemesterId = 0;
            }
        }
    }
    
    private async Task SaveSubjectsChanges()
    {
        if (subjectsData == null)
