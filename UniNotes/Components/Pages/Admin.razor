            bool success = await SubjectService.SaveSubjectsDataAsync(subjectsData);
            
            if (success)
            {
                successMessage = "Subjects updated successfully.";
            }
            else
            {
                errorMessage = "Failed to save subject changes.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving subject changes: {ex.Message}";
        }
    }
    
